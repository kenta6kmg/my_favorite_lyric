<div class="post">
  <div class="post-date">
     <%= @lyric.lyric %>/
     <%= @lyric.song %>/
     <%= @lyric.artist %>/
  </div> 

  <div class="container">
   <% if user_signed_in? %>
     <%= form_with(model: [@lyric, @comment], local: true) do |form| %>
     <%= form.text_area :text, placeholder: "コメントする" %>
     <%= form.submit "SEND"%>
   <% end %>
  </div>
  <% end %>

  <div class="comments">
   <h4><コメント一覧></h4>
   <% @comments.each do |comment| %>
   <p><%= comment.text %></p>
   <% end %>
  </div>
</div>
